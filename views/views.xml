<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="Course.list">
      <field name="name">Course list</field>
      <field name="model">Course</field>
      <field name="arch" type="xml">
        <tree string="List">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="Course.form">
      <field name="name">Course form</field>
      <field name="model">Course</field>
      <field name="arch" type="xml">
        <form string="Form">
          <group colspan="4">
              <group colspan="2" col="2">
                  <separator string="General stuff" colspan="2"/>
                  <field name="name"/>
                  <field name="inventor_id"/>
              </group>
      
              <group colspan="2" col="2">
                  <separator string="Dates" colspan="2"/>
                  <field name="active"/>
                  <field name="invent_date" readonly="1"/>
              </group>
      
              <notebook colspan="4">
                  <page string="Description">
                      <field name="description" nolabel="1"/>
                  </page>
              </notebook>
      
              <field name="state"/>
          </group>
      </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="Course.action">
      <field name="name">Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_Courses" parent="menu_root" name="Courses" sequence="10"
            action="action_list_courses"/>

